# Server Configuration
PORT=5000

# Database (Required)
DATABASE_URL=postgres://user:pass@host/db?sslmode=require

# Authentication (Required)
SESSION_SECRET=change-me-to-a-long-random-string

# Authentication Mode (Choose one)
# USE_DEV_AUTH=1       # For local development with mock auth
# USE_CUSTOM_AUTH=1    # For production with custom auth
# (Leave both commented out for Replit OIDC auth)

# Custom Auth Configuration
ADMIN_EMAIL=admin@schoolsphere.com
ADMIN_PASSWORD=Admin123!  # Change this in production!
ALLOW_ADMIN_SETUP=0  # Set to 1 during initial setup only

# Replit OIDC (Auto-provided by Replit)
REPL_ID=auto-provided-by-replit
REPLIT_DOMAINS=auto-provided-by-replit
ISSUER_URL=https://replit.com/oidc

# Payment Processing (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Environment
NODE_ENV=development